# Server Configuration
NODE_ENV=production
PORT=5000
API_VERSION=v1

# Database Configuration (Use MongoDB Atlas for production)
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/sr-bird-tournament?retryWrites=true&w=majority
MONGODB_TEST_URI=mongodb+srv://username:password@cluster.mongodb.net/sr-bird-tournament-test?retryWrites=true&w=majority

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRE=7d
JWT_REFRESH_SECRET=your-refresh-token-secret
JWT_REFRESH_EXPIRE=30d

# Redis Configuration (for caching and sessions)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=

# Razorpay Configuration
RAZORPAY_KEY_ID=your-razorpay-key-id
RAZORPAY_KEY_SECRET=your-razorpay-key-secret
RAZORPAY_WEBHOOK_SECRET=your-webhook-secret

# Email Configuration (Nodemailer)
EMAIL_FROM=noreply@srbird.com
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password

# Cloudinary Configuration (for image uploads)
CLOUDINARY_CLOUD_NAME=your-cloud-name
CLOUDINARY_API_KEY=your-api-key
CLOUDINARY_API_SECRET=your-api-secret

# Security Configuration
BCRYPT_SALT_ROUNDS=12
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Admin Configuration
ADMIN_EMAIL=admin@srbird.com
ADMIN_PASSWORD=change-this-secure-password
ADMIN_SECRET_KEY=admin-secret-key-for-special-operations

# Tournament Configuration
TOURNAMENT_REGISTRATION_FEE=30
TOURNAMENT_CURRENCY=INR
MAX_PLAYERS_PER_TOURNAMENT=64
TOURNAMENT_DURATION_HOURS=4

# File Upload Configuration
MAX_FILE_SIZE=5242880
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=logs/app.log

# Frontend URL (for CORS) - Update with your Netlify domain
FRONTEND_URL=https://your-app-name.netlify.app
FRONTEND_DOMAIN=your-app-name.netlify.app

# Webhook URLs
PAYMENT_SUCCESS_WEBHOOK=/api/v1/webhooks/payment-success
PAYMENT_FAILURE_WEBHOOK=/api/v1/webhooks/payment-failure
